{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "laravel-boost": {
      "type": "local",
      "command": ["php", "./artisan", "boost:mcp"],
      "enabled": true
    }
  },
  "lsp": {
    "intelephense": {
      "command": [
        "intelephense",
        "--stdio"
      ],
      "extensions": [
        ".php"
      ]
    }
  },
  "formatter": {
    "php": {
      "command": ["./.opencode/format.sh", "$FILE"],
      "extensions": [".php"]
    },
  }
}
