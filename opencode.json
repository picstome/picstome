{
    "$schema": "https://opencode.ai/config.json",
    "lsp": {
        "php intelephense": {
            "command": [
                "intelephense",
                "--stdio"
            ],
            "extensions": [
                ".php"
            ]
        }
    },
    "mcp": {
        "laravel-boost": {
            "type": "local",
            "enabled": true,
            "command": [
                "php",
                "artisan",
                "boost:mcp"
            ]
        }
    },
    "formatter": {
        "prettier": {
            "disabled": true
        }
    }
}